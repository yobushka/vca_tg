# Copy to .env and fill in your values
# Telegram bot token (BotFather) and chat id (user/group/channel)
TELEGRAM_BOT_TOKEN=123456:ABCDEF-your-bot-token
TELEGRAM_CHAT_ID=-1001234567890

# Optional runtime knobs
# Clip duration in seconds (default 10)
CLIP_SECONDS=10
# Cooldown between alerts per camera in seconds (default 20)
COOLDOWN_SECONDS=20
# Verbose logging (1 on, 0 off)
DEBUG=1
# Capability probe/logging on connect (1 on, 0 off)
CAP_TEST=1

# Raw XML debugging (set RAW_XML_SAVE=1 to write each event's XML under RAW_XML_DIR)
# Save raw XML files (0 disable, 1 enable)
RAW_XML_SAVE=0
# Directory (inside container) where XML files are stored (mounted via docker-compose)
RAW_XML_DIR=raw_xml
# Max characters of XML printed to console (avoid log spam)
RAW_XML_MAX_PRINT=4000
